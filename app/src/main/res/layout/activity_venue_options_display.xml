<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    android:orientation="vertical">

    <TextView
        android:id="@+id/choice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/venue_option_1"
        android:elevation="13dp"
        android:padding="30dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/choice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/venue_option_2"
        android:elevation="13dp"
        android:padding="30dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/choice3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/venue_option_3"
        android:elevation="13dp"
        android:padding="30dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/choice4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/venue_option_4"
        android:elevation="13dp"
        android:padding="30dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/choice5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/venue_option_5"
        android:elevation="13dp"
        android:padding="30dp"
        android:textAlignment="center"
        android:textSize="24sp"
        android:visibility="invisible" />


    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/update_venues"
        android:hint="@string/update_venues"
        android:onClick="venueOptions5" />
</LinearLayout>
    </ScrollView>