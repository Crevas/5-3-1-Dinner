<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"
    android:orientation="vertical">

    <TextView
        android:id="@+id/choice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/venue_option_1"
        android:elevation="@dimen/text_view_elevation"
        android:padding="@dimen/text_view_padding"
        android:textAlignment="center"
        android:textSize="@dimen/text_view_text_size"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/choice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/venue_option_2"
        android:elevation="@dimen/text_view_elevation"
        android:padding="@dimen/text_view_padding"
        android:textAlignment="center"
        android:textSize="@dimen/text_view_text_size"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/choice3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/venue_option_3"
        android:elevation="@dimen/text_view_elevation"
        android:padding="@dimen/text_view_padding"
        android:textAlignment="center"
        android:textSize="@dimen/text_view_text_size"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/choice4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/venue_option_4"
        android:elevation="@dimen/text_view_elevation"
        android:padding="@dimen/text_view_padding"
        android:textAlignment="center"
        android:textSize="@dimen/text_view_text_size"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/choice5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:contentDescription="@string/venue_option_5"
        android:elevation="@dimen/text_view_elevation"
        android:padding="@dimen/text_view_padding"
        android:textAlignment="center"
        android:textSize="@dimen/text_view_text_size"
        android:visibility="invisible" />


    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/update_venues"
        android:onClick="venueOptions5" />
</LinearLayout>