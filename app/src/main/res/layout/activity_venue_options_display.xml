<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fillViewport="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:background="@color/primary_light"
    android:orientation="vertical">

    <TextView
        android:id="@+id/choice1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:clickable="true"
        android:contentDescription="@string/venue_option_1"
        android:elevation="@dimen/text_view_elevation"
        android:padding="@dimen/text_view_padding"
        android:textAlignment="center"
        android:textSize="@dimen/text_view_text_size"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/choice2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/choice1"
        android:clickable="true"
        android:contentDescription="@string/venue_option_2"
        android:elevation="@dimen/text_view_elevation"
        android:padding="@dimen/text_view_padding"
        android:textAlignment="center"
        android:textSize="@dimen/text_view_text_size"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/choice3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/choice2"
        android:clickable="true"
        android:contentDescription="@string/venue_option_3"
        android:elevation="@dimen/text_view_elevation"
        android:padding="@dimen/text_view_padding"
        android:textAlignment="center"
        android:textSize="@dimen/text_view_text_size"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/choice4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/choice3"
        android:clickable="true"
        android:contentDescription="@string/venue_option_4"
        android:elevation="@dimen/text_view_elevation"
        android:padding="@dimen/text_view_padding"
        android:textAlignment="center"
        android:textSize="@dimen/text_view_text_size"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/choice5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/choice4"
        android:clickable="true"
        android:contentDescription="@string/venue_option_5"
        android:elevation="@dimen/text_view_elevation"
        android:padding="@dimen/text_view_padding"
        android:textAlignment="center"
        android:textSize="@dimen/text_view_text_size"
        android:visibility="invisible" />


    <Button
        android:id="@+id/button2"
        android:layout_width="@dimen/button_main_height"
        android:layout_height="@dimen/button_main_width"
        android:layout_below="@+id/choice5"
        android:layout_centerHorizontal="true"
        android:background="@drawable/updated_button_state"
        android:elevation="@dimen/button_elevation"
        android:onClick="venueOptions5"
        android:visibility="invisible"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="@dimen/button_main_height"
            android:layout_height="@dimen/button_main_width"
            android:layout_below="@+id/choice5"
            android:layout_centerHorizontal="true"
            android:background="@drawable/maps_button_state"
            android:elevation="@dimen/button_elevation"
            android:onClick="venueOptions5"
            android:visibility="invisible"/>
    </RelativeLayout>
</ScrollView>